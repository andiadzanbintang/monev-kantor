{
    "version": 2,
    "builds": [
      { "src": "index.js", "use": "@vercel/node" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/index.js" }
    ],
    "env": {
      "MONGO_URL": "@mongo_url",
      "FRONTEND_URL": "@frontend_url",
      "ADMIN_JWT_SECRET": "@admin_jwt_secret",
      "NODE_ENV": "@node_env"
    }
  }
  